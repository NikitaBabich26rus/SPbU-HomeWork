@model List<LoadAssemblyViewModel>
@{
    ViewData["Title"] = "Load the assembly";
}

<h1>Load the assembly</h1>

<form style="margin-top: 3rem" asp-controller="Home" asp-action="LoadTheAssembly" method="post" enctype="multipart/form-data">
    <input accept=".dll" type="file" name="file" />
    <input class="btn btn-dark" type="submit" value="Upload" />
</form>
<form style="margin-top: 1rem" asp-controller="Home" asp-action="DeleteLoadAssemblies" method="post" enctype="multipart/form-data">
    <input class="btn btn-dark" type="submit" value="Delete all" />
</form>
<h6>Загруженные сборки:</h6>
@if (Model == null)
{
    return;
}
<ul>
    @foreach(var item in Model)
    {
        <li>
            @item.Name
        </li>
    }
</ul>
